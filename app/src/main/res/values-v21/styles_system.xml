<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="BaseSystemTheme" parent="android:Theme.Material.Light">


        <item name="android:colorPrimary">@color/theme_highlight</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="android:colorAccent">@color/theme_accent</item>
        <item name="android:colorControlNormal">@color/theme_control_normal</item>
        <item name="android:colorControlActivated">@color/theme_control_activated</item>
        <item name="android:colorControlHighlight">@color/theme_control_highlight</item>

        <item name="android:actionBarStyle">@style/BaseSystemThemeActionBar</item>
        <item name="android:actionBarTheme">@style/BaseSystemThemeActionBarTheme</item>


    </style>

    <style name="BaseSystemThemeActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>

        <item name="android:subtitleTextStyle">@style/ActionBarSubtitleText</item>

    </style>
    <style name="BaseSystemThemeActionBarTheme" parent="android:ThemeOverlay.Material.ActionBar">
        <item name="android:colorControlNormal">@color/action_bar_title</item>
    </style>

</resources>
