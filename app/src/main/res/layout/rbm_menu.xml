<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    
    <ListView 
        android:id="@+id/rbm_listview"
        android:layout_width="@dimen/rmb_menu_width"
        android:layout_height="match_parent" 
        android:cacheColorHint="@color/ribbonmenu_background" 
        android:background="@color/ribbonmenu_background"
        android:listSelector="@drawable/list_selector_ribbonmenu"
        android:divider="@drawable/linebreak_dark"
        android:visibility="gone">
                   <!-- android:background="#303030"  #efefef -->
    </ListView>    
     
    
    <View 
        android:id="@+id/rbm_outside_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:visibility="gone"/>
    
    
    

</LinearLayout>