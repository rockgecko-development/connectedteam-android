<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <LinearLayout
        android:background="@color/connected_dark_background"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:id="@+id/text1"	
	    android:textColor="#ffffff"
 		 android:layout_width="0dp"
        android:layout_weight="1"
 		 android:layout_height="wrap_content"
 		 
 		 tools:text="Hospital name"/>
        <TextView android:id="@+id/textDate"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_clock_15"
            tools:text="01/01/2015 8:30"/>

</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_assesment"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <com.ns.developer.tagview.widget.TagCloudLinkView
                android:id="@+id/hashtag_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:isDeletable="false"
                app:tagLayoutColor="@color/theme_highlight"
                app:tagTextSize="8sp"
                app:tagTextColor="@color/tag_text_colour"
                app:deletableTextSize="8sp"
                app:deletableTextColor="#ff9acd32"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:id="@+id/textOwnerName"
                    android:textColor="@color/connected_dark_background"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    tools:text="Hospital name"/>
                <TextView android:id="@+id/textHeadCount"
                    android:textColor="@color/connected_dark_background"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3/5 places"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</LinearLayout>